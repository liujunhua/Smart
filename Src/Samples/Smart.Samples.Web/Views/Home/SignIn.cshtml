@model Smart.Samples.Web.Models.SignInModel
@{
    ViewBag.Title = "登录";
    ViewBag.BodyClass = "login-page";
}
@section head{
    <link href="/scripts/icheck/square/blue.css" rel="stylesheet" />
    <style>
        body { background-image: url(/content/images/login_bg.jpg) !important; }
    </style>
}
<div class="login-box">
    <div class="box box-warning">
        <div class="box-header with-border">
            <h3 class="box-title login-logo">
                <i class="fa fa-sign-in"></i> @ViewBag.Title
            </h3>
        </div>
        <div class="box-body">
            <div class="box-header text-center">
                @*<h4></h4>*@
            </div>
            <div class="login-box-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group has-feedback">
                        <span class="fa fa-user form-control-feedback"></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "登录邮箱" })
                        @Html.ValidationMessageFor(m => m.Email) 
                    </div>
                    <div class="form-group has-feedback">
                        <span class="fa fa-lock form-control-feedback"></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "登录密码" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="row">
                        <div class="col-xs-7">
                            <div class="checkbox icheck">
                                <label>@Html.CheckBoxFor(m => m.RememberMe) 记住我？ </label>
                            </div>
                        </div>
                        <div class="col-xs-5">
                            <button class="btn bg-blue btn-block btn-flat" id="btnLogin" type="submit" data-loading-text="登录中...">登录 <i class="fa fa-sign-in"></i></button>
                        </div>
                    </div>
                }
            </div>
            @Html.ValidationSummary()
        </div>
        <div class="box-footer">
            <div class="pull-right">
                <a href="ForgotPassword">忘记密码?</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/js/icheck")
    @Scripts.Render("~/js/validate")
    <script>
        $(function () {
            $('#RememberMe').iCheck({ checkboxClass: 'icheckbox_square-blue' });
            $("#Password").keydown(function (event) {
                if (event.keyCode == 13) {
                    $("#btnLogin").click();
                }
            });
            $("#btnLogin").click(defaultSubmit);
        });
    </script>
}
